# assign [app_id="firefox"] workspace 1
# assign [app_id="foot"] workspace 2
# assign [app_id="footclient"] workspace 2
# assign [app_id="thunderbird"] workspace 3
# assign [app_id="virt-manager"] workspace 4


# This app should not be executed always
include /etc/sway/config.d/*
